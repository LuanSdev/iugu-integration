{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": false,
    "skipLibCheck": true,
    "baseUrl": "src",
    "typeRoots": ["./@types", "node_modules/@types"],
    "types": ["@types/jest", "node"]
  },
  "include": ["src/**/*", "__tests__/src/**/*"]
}
